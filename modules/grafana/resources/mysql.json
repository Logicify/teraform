{
  "name": "${container_name}",
  "image": "mysql:5.7",
  "cpu": 0,
  "memory":  ${mysql_memory_limit},
  "essential": true,
  "portMappings": [
    {
      "hostPort": 1106,
      "containerPort": 3306,
      "protocol": "tcp"
    }
  ],
  "environment": [
    {
      "name": "MYSQL_ROOT_PASSWORD",
      "value": "${mysql_root_password}"
    },
    {
      "name": "MYSQL_DATABASE",
      "value": "grafana"
    }
  ],
  "mountPoints": [
    {
      "sourceVolume": "${mysql_volume_name}",
      "containerPath": "/var/lib/mysql",
      "readOnly": false
    }
  ],
  "volumesFrom": [],
  "logConfiguration": {
    "logDriver": "syslog",
    "options": {
      "tag": "grafana-mysql"
    }
  }
}