[
  {
    "name": "${container_name}",
    "image": "grafana/grafana:${grafana_version}",
    "taskRoleArn": "${task_role}",
    "memory":  ${grafana_container_memory},
    "essential": true,
    "portMappings": [
      {
        "hostPort": ${http_transport_port},
        "containerPort": 3000,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "name": "GF_INSTALL_PLUGINS",
        "value": "${grafana_plugins}"
      },
      {
        "name": "GF_SERVER_ROOT_URL",
        "value": "${grafana_url}"
      },
      {
        "name": "GF_SECURITY_ADMIN_PASSWORD",
        "value": "${grafana_password}"
      },
      {
        "name": "GF_DATABASE_HOST",
        "value": "${container_name}-mysql:3306"
      },
      {
        "name": "GF_DATABASE_PASSWORD",
        "value": "${mysql_root_password}"
      },
      {
        "name": "GF_DATABASE_TYPE",
        "value": "${grafana_database}"
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "${data_volume_name}",
        "containerPath": "/var/lib/grafana",
        "readOnly": false
      },
      {
        "sourceVolume": "${config_volume_name}",
        "containerPath": "/etc/grafana",
        "readOnly": false
      }
    ],
    "volumesFrom": null,
    "ulimits": null,
    "dockerLabels": null,
    "logConfiguration": {
      "logDriver": "syslog",
      "options": {
        "tag": "grafana"
      }
    }
  },
  {
    "name": "${container_name}-mysql",
    "image": "mysql:8.0",
    "memory":  "${mysql_memory_limit}",
    "essential": true,
    "portMappings": [
      {
        "hostPort": 1106,
        "containerPort": 3306,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "name": "MYSQL_ROOT_PASSWORD",
        "value": "${mysql_root_password}"
      },
      {
        "name": "MYSQL_DATABASE",
        "value": "grafana"
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "${data_volume_name}",
        "containerPath": "/var/lib/grafana",
        "readOnly": false
      },
      {
        "sourceVolume": "${config_volume_name}",
        "containerPath": "/etc/grafana",
        "readOnly": false
      },
      {
        "sourceVolume": "${mysql_volume_name}",
        "containerPath": "/var/lib/mysql",
        "readOnly": false
      }
    ],
    "volumesFrom": null,
    "ulimits": null,
    "dockerLabels": null,
    "logConfiguration": {
      "logDriver": "syslog",
      "options": {
        "tag": "grafana"
      }
    }
  }
]
